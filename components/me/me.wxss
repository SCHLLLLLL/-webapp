/* components/me/me.wxss */
.container {
  margin: 0 20rpx 0 20rpx;
  padding: 40rpx;
}
.user {
  display: flex;
  flex-direction: row;
  margin: 10rpx 10rpx 50rpx 10rpx;
}

.user .user-info .name {
  font-size: 50rpx;
}

.user-avatar {
  position: absolute;
  right: 40px;
}

.user-avatar .user-img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.user .gray {
  padding-top: 10rpx;
  font-size: 30rpx;
  color: rgb(167, 166, 166);
}
.user .user-edit {
  float: left;
}
.user .btn-edit{
  margin-top: 10rpx;
  width: 60px;
  height: 60rpx;
  font-size: 25rpx;
  color: #DDD;
  background-color: #666999;
}

.user .btn {
  margin-top: 20rpx;
  width: 90px;
  height: 60rpx;
  font-size: 25rpx;
  color: #DDD;
  background-color: #666999;
}

.item{
  margin-top: 10rpx;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #000;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 36rpx;
}

.item view:first-child {
  flex: 1;
}

.item .item-img {
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
  vertical-align: middle;
}

.arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  width: 8px;
  height: 8px;
  transform: rotate(-45deg);
}